@using Billy.Models
@model IEnumerable<Category>


	<div class="container">
		<div class="row pt-4 pb-3">
		<div class="col-6"> 
			<h2>Category List</h2>
		</div>
		<div class="col-6 text-end">
		<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category <i class="bi bi-building-add"></i> </a>
		</div>
		</div>
<table class="table table-bordered table-striped">
	<tr>
		<th>Name</th>
		<th>Display Order</th>
		<th>Action</th>
	</tr>
	<tbody>
		@foreach(var item in Model)
		{
		<tr>
			<td>@item.Name</td>
		    <td>@item.DisplayOrder </td>
					<td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit <i class="bi bi-pencil-square" ></i></a>|
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete <i class="bi bi-trash3"></i></a>
					</td>
		</tr>	
		
		}
	</tbody>
</table>

	</div>